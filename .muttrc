#
# mutt main config file
#

# Main Account [Gmail]
#
set my_server='imap.gmail.com'
set my_smtp_server='smtp.gmail.com'	
set my_user='cosmin.cojocar@gmail.com'
set my_pass=''
set realname='Cosmin Cojocar'
set from='cosmin.cojocar@gmail.com'

# Account [SMTP and IMAP]
#
set smtp_url="smtp://$my_user@$my_smtp_server:587/"
set smtp_pass=$my_pass
set smtp_authenticators='login'
set imap_user=$my_user
set imap_pass=$my_pass
set ssl_starttls=yes
set ssl_force_tls=yes

# Default inbox
#
set folder=imaps://$my_server/
set spoolfile="+INBOX"
set mbox="imaps://$my_server/[Gmail]/All Mail"
set trash="imaps://$my_server/[Gmail]/Trash"
set record="+[Gmail]/Sent Mail"
set postponed="+[Gmail]/Drafts"

set query_command="pc_query -m '%s'"
bind editor <Tab> complete-query
bind editor <space> noop

source ~/.mutt/general.muttrc
source ~/.mutt/composing.muttrc
source ~/.mutt/mailboxes.muttrc
source ~/.mutt/headers.muttrc
source ~/.mutt/bindings.muttrc
source ~/.mutt/sidebar.muttrc
# source ~/.mutt/crypto.muttrc

# Colors
#
source ~/.mutt/mutt-colors-solarized-dark-256.muttrc
